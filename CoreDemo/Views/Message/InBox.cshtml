@using EntityLayer.Concrete
@model List<Message2>
@{
    ViewData["Title"] = "InBox";
    Layout = "~/Views/Shared/WriterLayout.cshtml";
}
<h1>Gelen Kutusu</h1>
<table class="table table-bordered">
    <tr>
        <th>#</th>
        <th>Konu</th>
        <th>Gonderen</th>
        <th>Tarih</th>
        <th>Mesaji Ac</th>
    </tr>
    @foreach (var item in Model)
    {
        <tr>
            <td>@item.MessageID</td>
            <td>@item.Subject</td>
            <td>@item.SenderWriter.WriterName</td>
            <td>@(((DateTime)item.MessageDate).ToString("dd-MMM-yyyy"))</td>
            <td>
                <a href="/Message/MessageDetails/@item.MessageID" class="btn-sm btn-outline-success">Mesaji Ac</a>
            </td>
        </tr>
    }
</table>
<br />
<a href="/CoreBlogTema/re" class="btn-lg btn-info">Yeni Mesaj Olustur</a>

