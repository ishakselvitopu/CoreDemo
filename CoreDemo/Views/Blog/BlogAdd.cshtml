@model EntityLayer.Concrete.Blog
@{
    ViewData["Title"] = "BlogAdd";
    Layout = "~/Views/Shared/WriterLayout.cshtml";
}
<h1>Yeni Blog Girisi</h1>
<br />
@using (Html.BeginForm("BlogAdd", "Blog", FormMethod.Post))
{
    @Html.Label("Blog Basligi")
    @Html.TextBoxFor(x => x.BlogTittle, new { @class = "form-control" })
    @Html.ValidationMessageFor(x => x.BlogTittle)
    <br />
    @Html.Label("Blog Gorseli")
    @Html.TextBoxFor(x => x.BlogImage, new { @class = "form-control" })
    @Html.ValidationMessageFor(x => x.BlogImage)
    <br />
    @Html.Label("Blog Kucuk Gorseli")
    @Html.TextBoxFor(x => x.BlogThumnailImage, new { @class = "form-control" })
    <br />
    @Html.Label("Kategori")
    @Html.DropDownListFor(x => x.CategoryID, (List<SelectListItem>)ViewBag.dynamic, new { @class = "form-control" })
    @Html.ValidationMessageFor(x=>x.Category)
    <br />
    @Html.Label("Blog Icerigi")
    @Html.TextAreaFor(x => x.BlogContent, 10, 5, new { @class = "form-control" })
    @Html.ValidationMessageFor(x => x.BlogContent)
    <br />
    <button class="btn btn-info">Yaziyi Kaydet</button>
}
